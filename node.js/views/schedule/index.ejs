addEvent("onload",init);
</script>

<h1>Schedule</h1>

<% if (!user) { %>
<p class="login"><a href="<%= baseurl %>/login">Log in to build your schedule</a></p>
<% } %>

<% if (currentEvents.length) {%>
<h2>Currently</h2>
    <%- partial('schedule/event-list.ejs', {eventList: currentEvents}) %>
<% } %>

<% if (nextEvents.length) {%>
<h2>Next</h2>
    <%- partial('schedule/event-list.ejs', {eventList: nextEvents}) %>
<% } %>

<% if (user) { %>
<h2>My schedule</h2>
    <p>Star meetings below to have them appear in your schedule</p>
    <p><a href="<%= baseurl %>/schedule/add">Add an ad-hoc event</a></p>
    <% if (myEvents.length) {%>
    <%- partial('schedule/event-list.ejs', {eventList: myEvents, showTime: true, className: "mySchedule"}) %>
    <% } %>
<% } %>

<% var expanded = !currentEvents.length; %>
<% var interestMarker = true; %>
<%- partial('schedule/full-schedule.ejs', {days: days, timeslots: timeslots, schedule:schedule, expanded: expanded, interestMarker: interestMarker}) %>



