
<div class="control-group">
	<label class="control-label" for="name">Name:</label>
	<div class="controls">
		<input id="name" name="name" required>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="day">Day:</label>
	<div class="controls">
		<select id="day" name='day'>
			<option value='20111031'>Monday</option>
			<option value='20111101'>Tuesday</option>
			<option value='20111102'>Wednesday</option>
			<option value='20111103'>Thursday</option>
			<option value='20111104'>Friday</option>
		</select>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="start">Time start:</label>
	<div class="controls">
		<input required id="start" name="start" placeholder="HH:MM" size="5">
		<p class="help-block">(US Pacific Time)</p>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="end">Time end:</label>
	<div class="controls">
		<input id="end" name="end" required placeholder="HH:MM" size="5">
		<p class="help-block">(US Pacific Time)</p>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="room">Room:</label>
	<div class="controls">
		<select id="room" name='room'>
			<option>Unknown</option>
			<% for (var p  in places) { %> 
			<option value="<%= places[p].shortname %>"><%= places[p].name %></option>
			<% } %>
		</select>
	</div>
</div>


<% if (typeof includeDetails != "undefined" && includeDetails) { %>

<div class="control-group">
	<label class="control-label" for="presenters">Presenters:</label>
	<div class="controls">
		<input id="presenters" name='presenters'>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="confidentiality">Confidentiality:</label>
	<div class="controls">
		<select id="confidentiality" name="confidentiality">
			<option>public</option>
			<option value="member">W3C Member-only</option>
		</select>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="observers">Observers:</label>
	<div class="controls">
		<select id="observers" name="observers">
			<option value="chairs">Allowed, to the Chairs discretion</option>
			<option value="no">Not allowed</option>
		</select>
	</div>
</div>

<% } %>

<div class="form-actions">
	<button type="submit" class="btn" name="addEvent">Add a new event</button>
</div>