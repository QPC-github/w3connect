<ul id="peopleList" class="nav nav-pills nav-stacked">
	<% for (var p  in people) { %>
	<li>
		<a <% if(everyauth.user && people[p].login == everyauth.user.login) {%>class='me'<%}%> href='<%= baseurl %>/people/profile/<%= people[p].slug %>'>
			<img src="<% if (people[p].picture_thumb) { %><%=people[p].picture_thumb%><% } else { %><%= baseurl %>/img/default-pic.png<% } %>" width='36' alt="Picture of <%= people[p].given + " " + people[p].family %>">
			<%= people[p].family + ", " + people[p].given %>
		</a>
		<% if (typeof showCheckin != "undefined" && showCheckin && people[p].lastKnownPosition && people[p].lastKnownPosition.shortname) { %>
		<% var elapsedTime = Date.now() - people[p].lastKnownPosition.time ; %>
		<% var nowString = (elapsedTime > 24*3600*1000 ? Math.floor(elapsedTime / (24*3600*1000)).toString() + ' days ago' :  (elapsedTime > 3600*1000 ? Math.floor(elapsedTime / (3600*1000)).toString() + ' hours ago' : Math.floor(elapsedTime / (60*1000)).toString() + ' minutes ago')); %>
		last checkin: <a class="supp" href="<%= baseurl %>/locations/<%= people[p].lastKnownPosition.shortname %>"><%= people[p].lastKnownPosition.name %></a> <%= nowString %>
		<% } %>
	</li>
	<% } %>
</ul>
