<h1><%= indiv.given + ' ' + indiv.family %><%= (everyauth.loggedIn && user.login == indiv.login ? " (You)" : "")%></h1>
<% if (indiv.picture) {%>
<p style='float:right'><img src="<%= indiv.picture %>" alt="Picture of <%= indiv.given + ' ' + indiv.family %>"></p>
<% } %>
<dl>
<% if (everyauth.loggedIn) {%>
<dt>Email</dt>
<dd><a href='mailto:<%=indiv.email %>'><%= indiv.email %></a></dd>
<% } %>
<dt>Affiliation</dt>
<dd><% if (indiv.affiliation) { %><a href='<%= baseurl %>/orgs/<%= indiv.affiliation.slug%>'><%= indiv.affiliation.name %></a><% } else {%>Unknown<%}%></dd>
<% if (indiv.twitterAccount && indiv.twitterAccount.name) {%>
<dt>Twitter account</dt>
<dd><a href="http://twitter.com/<%= indiv.twitterAccount.name %>">@<%= indiv.twitterAccount.name %></a></dd>
<%}%>
<dt>Latest check-in</dt>
<dd><% if (indiv.lastKnownPosition && indiv.lastKnownPosition.shortname) { %>
<% var elapsedTime = Date.now() - indiv.lastKnownPosition.time ; %>
<% var nowString = (elapsedTime > 24*3600*1000 ? Math.floor(elapsedTime / (24*3600*1000)).toString() + ' days ago' :  (elapsedTime > 3600*1000 ? Math.floor(elapsedTime / (3600*1000)).toString() + ' hours ago' : Math.floor(elapsedTime / (60*1000)).toString() + ' minutes ago')); %>
<a href="<%= baseurl %>/locations/<%= indiv.lastKnownPosition.shortname %>"><%= indiv.lastKnownPosition.name %></a> <%= nowString %>
<% } else {%>Unknown<% } %></dd>
</dl>
<%- messages()%>
<% if (everyauth.loggedIn && user.login == indiv.login && !(indiv.twitterAccount && indiv.twitterAccount.name)) {%>
<h2>Update profile</h2>
<form action='' method='post'>
<p><label>Twitter account: <input type="text" name="twitter"></label></p>
<p><input type="submit" name="updateProfile"></p>
</form>
<%}%>
<h2>Schedule</h2>
<p>Meetings that <%= indiv.given %> has marked as interesting:</p>
<dl>
<%- partial("schedule/full-schedule.ejs", {days: days, timeslots: timeslots, schedule:schedule, expanded: true, interestMarker: false}) %>
</dl>
<% if (statusupdates.length) { %>
<h2>Recent activity</h2>
<ul>
<% for (var s=0; s<statusupdates.length; s++) { %>
<li><%= statusupdates[s].content %> (<%= statusupdates[s].time %>)</li>
<% } %>
</ul>
<% } %>